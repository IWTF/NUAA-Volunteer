/* components/drawButton/drawerButton.wxss */
@import '../../style/icon.wxss';

.drawerButton {
  position: relative;
  display: inline-block;
}
.mainBtn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  color: #6bb9fe;
  background-color: #fff;
  text-align: center;
  transition: all 0.3s ease-out;
}

.showState {
  transform: rotate(225deg);
}

.btnItem {
  position: absolute;
  left: 0;
  top: 0;
  padding: 30rpx;
  color: #fff;
  background-color: #6bb9fe;
  border-radius: 50%;
  transform: scale(0);
  opacity: .3;
  transition: all 0.3s ease-out;
}

.popAnimation1 {
  transform: scale(.8) translateX(-50%);
  opacity: .9;
  left: -100%;
  top: 0;
}

.popAnimation2 {
  transform: scale(.8) translateY(-50%);
  opacity: .9;
  left: 0;
  top: -100%;
}
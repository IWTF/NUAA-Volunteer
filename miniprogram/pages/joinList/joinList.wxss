/* miniprogram/pages/actList/actList.wxss */
page {
  font-size: 26rpx;
  color: #80848f;
}

/* 顶部活动状态tab */
.header {
  position: fixed;
  top: 117rpx;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  z-index: 1;
}

.header view {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 30rpx;
}

.selected {
  color: #6bb9fe;
  border-bottom: 8rpx solid #6bb9fe;
}

/* 活动列表 */
.actList {
  margin-top: 205rpx;
  padding: 10rpx 20rpx;
  height: 100vh;
}

.listCon {
  background-color: #f8f8f9;
}

.actItem {
  background-color: #fff;
  margin: 18rpx 0;
  padding: 0 100rpx;
  position: relative;
}

.number {
  position: absolute;
  top: 0;
  left: 0;
  width: 60rpx;
  height: 20rpx;
  line-height: 20rpx;
  color: #fff;
  background-color: #7ec3ff;
  border-radius: 5rpx 0 60rpx 0;
}

.actItem>view{
  display: inline-block;
  vertical-align: middle;
  padding: 20rpx;
}

.actImg, .actImg image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}

.acTitle {
  /* font-size: 30rpx;
  font-weight: bold; */
  color: #1c2438;
}

.num {
  float: right;
  margin-right: -60rpx;
  line-height: 105rpx;
}


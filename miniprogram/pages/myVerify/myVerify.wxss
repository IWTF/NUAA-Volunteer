/* miniprogram/pages/myVerify/myVerify.wxss */
page {
  font-size: 26rpx;
  color: #495060;
}

.tilCon {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  padding: 15rpx 25rpx;
  background-color: #f8f8f9;
  border-bottom: #6bb9fe solid 2px;
}


.vertifyCon {
  width: 92vw;
  border-bottom:  #6bb9fe dashed 2rpx;
}

.vertifyCon span {
  display: inline-block;
  vertical-align: top;
}

.vertifyCon .avatar {
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  margin: 0rpx 30rpx 20rpx 30rpx;
  border-radius: 15rpx;
  overflow: hidden;
}

.vertifyCon .username {
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #6bb9fe;
}

.tilBtn {
  float: right;
  margin: 4rpx 70rpx 0 0;
  position: relative;
}

.deIcon {
  color: #6bb9fe;
  position: absolute;
  top: 3rpx;
  right: -32rpx;
}

.listCon {
  margin: 240rpx 25rpx 0;
}

.listItem {
  padding: 15rpx 0;
  border-bottom: 2rpx dashed #e2e2e2;
}

.number {
  font-size: 30rpx;
  font-weight: bold;
  color: #6bb9fe;
}

.floatItem {
  float: right;
}
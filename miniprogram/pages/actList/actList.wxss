/* miniprogram/pages/actList/actList.wxss */
page {
  font-size: 28rpx;
  color: #80848f;
}

/* 顶部活动状态tab */
.header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  z-index: 1;
}

.header view {
  flex: 1;
  text-align: center;
  padding: 10px 0;
  font-size: 30rpx;
}

.selected {
  color: #6bb9fe;
  border-bottom: 8rpx solid #6bb9fe;
}

/* 活动列表 */
.actList {
  margin-top: 205rpx;
  padding: 10rpx 20rpx;
  height: 92vh;
}

.listCon {
  background-color: #f8f8f9;
  padding: 0 0 60rpx 0;
}

.actItem {
  background-color: #fff;
  margin: 18rpx 0;
}

.actItem>view{
  display: inline-block;
  vertical-align: top;
  padding: 20rpx;
}

.actImg, .actImg image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 10rpx;
}

.acTitle {
  font-size: 30rpx;
  font-weight: bold;
  color: #1c2438;
  margin-bottom: 15rpx;
}

.num {
  float: right;
  margin-right: 20rpx;
  line-height: 118rpx;
}

/* 发布按钮 */
.publish {
  position: fixed;
  width: 216rpx;
  height: 64rpx;
  /* bottom: 32rpx; */
  left: calc(50% - 108rpx);
  right: calc(50% - 108rpx);
  text-align: center;
  background-color: #6bb9fe;
  font-size: 30rpx;
  line-height: 2;
  border-radius: 64rpx;
  box-shadow: 0 0 4rpx 0rpx rgba(81, 122, 155, 0.8);
  color: white;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease-out;
}

.publish text {
  padding: 0 4rpx;
}

.publishBtnShow {
  bottom: 32rpx;
  opacity: 1;
}

.publishBtnHide {
  bottom: -64rpx;
  opacity: 0;
}

/* 日期选择器 */
.pickerCon {
  padding: 20rpx 0 10rpx 0;
  margin-bottom: 20rpx;
  border-bottom: #6bb9fe dashed 2rpx;
}

.pickerCon>view {
  display: inline-block;
  vertical-align: middle;
}

.pickerCon .date {
  font-size: 44rpx;
  font-weight: bold;
}

.dateIcon {
  color: #6bb9fe;
  margin-left: 15rpx;
}
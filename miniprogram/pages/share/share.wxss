page { font-size: 28rpx; color: #333; font-family: Helvetica Neue, Helvetica, sans-serif; background: #f1f1f1; position: relative; box-sizing: border-box;}
view, text, scroll-view, swiper, button, form, input, textarea, label, navigator, image { box-sizing: border-box;}
button::after{ border: none; }
.copyrightGrid{ display: flex; vertical-align:middle; align-items:center; margin-top: 10rpx; line-height: 24rpx; font-size: 20rpx; color: #d1c9bf; height: 24rpx; overflow: hidden;}
.copyrightGrid .logo{ display: inline-flex; width: 24rpx; height: 24rpx; margin-right: 10rpx;}
.copyrightGrid .span{ margin-right: 8rpx; font-size: 20rpx; color: #d1c9bf; }
.commonFooterBtn{ position: fixed; bottom:0; left: 0; width: 100%; padding: 20rpx; z-index: 1024;}
.commonFooterBtn.white{ background: #fff; box-shadow: 0 5rpx 15rpx #bbb;}
.btnGroup{ padding: 10rpx 0; overflow: hidden; display: flex;}
.btnGroup.mb10{ margin-bottom: 20rpx;}
.btnGroup.mb20{ margin-bottom: 40rpx;}
.btnGroup .item{ display: flex; width: 100%; padding: 0 15rpx;}
.btnGroup .item.w50{ width: 50%;}
.btnGroup .btn{ background: #ff5a5f; color: #fff; width: 100%; padding: 0 30rpx; text-align: center; border-radius: 8rpx; line-height: 80rpx; height: 80rpx; overflow: hidden; font-size: 32rpx;}
.btnGroup .btn.default{ background: #fff; color: #999;}
.btnGroup .btn.gray{ background: #f4f4f4; color: #999;}
.btnGroup .btn.blue{ background: #5988fe;}
.btnGroup .btn.orange{ background: #fea233;}
.btnGroup .btn.disabled{ opacity: .8;}

.emilBg{ position: fixed; left: 0; top:0; z-index: -1; width: 100%; height: 100%; overflow: hidden;}
.envelopeGrid{ margin: 40rpx 30rpx 160rpx; position: relative;}

/* envelopeBox 信封 */
.envelopeBox{ padding: 10rpx; background: #fffdf7; border-radius: 8rpx; box-shadow: 0 2rpx 16rpx #aaa; position: relative; overflow: hidden; }
.envelopeBox.border{ background: linear-gradient(45deg, #0099e5 0, #0099e5 25%, transparent 25%, transparent 50%, #0099e5 50%, #0099e5 75%, transparent 75%, transparent); background-size: 40rpx 40rpx;}
.envelopeBox .envelopeBody{ padding: 30rpx; background: #fffdf7; border-radius: 8rpx; position: relative; overflow: hidden; }
.envelopeBox .mailToWrap{  padding: 40rpx 20rpx 0; background: #fffdf7; border-radius: 8rpx; overflow: hidden;}
.envelopeBox .mailBtmWrap{ /*position: absolute; left: 0; bottom: 0; width: 100%;*/ padding: 40rpx 10rpx 10rpx; background: #fffdf7;}

/* 信封颜色 选择区域 */
.envelopeBgGrid{ margin-bottom: 40rpx; white-space:nowrap; height:120rpx; overflow:hidden;}
.envelopeBgGrid .item{ display:inline-block; height: 100rpx; width: 110rpx; margin-right: 10rpx; overflow: hidden; position:relative; }
.envelopeBgGrid .envelopeBg{ border-radius: 50%; height: 100rpx; width: 100rpx; background: #fffdf7; overflow: hidden; }

/* 信封图案 选择区域 */
.focusItem{ white-space:nowrap; margin-bottom: 40rpx; height: 160rpx; overflow:hidden;}
.focusItem .item{ display:inline-block; height: 120rpx; width: 190rpx; margin-right: 10rpx; overflow: hidden; position:relative;}
.focusItem .focus{ display:inline-flex; vertical-align:middle; border-radius: 8rpx; position:relative; align-items:center; justify-content:center; height: 120rpx; width: 180rpx; overflow: hidden; padding: 20rpx; background: #fff; box-shadow: 0 2rpx 10rpx #ddd;font-weight: bold;letter-spacing: 10rpx;color: #80848f; }
.focusItem .focus .focusImg{ display: inline-block; width: 100%; border: 0; }

/* 邮票图案 选择区域 */
.stampItem{ white-space:nowrap; margin-bottom: 40rpx; height: 260rpx; overflow:hidden;}
.stampItem .item{ display:inline-block; width: 170rpx; height: 220rpx; margin-right: 10rpx; overflow: hidden; position:relative;}
.stampItem .stamp{ width: 160rpx; height: 220rpx; overflow: hidden;}
.stampItem .stamp .stampImg{ display: inline-block; width: 100%; border: 0; }

/* 信封图案 */
.envelopeBox .focusImgWrap{ height: 240rpx; }
.envelopeBox .focusImgWrap .focusImg{ display: block; width: 400rpx; border: 0; }

/* stampGroup 邮票 */
.stampGroup{ position: absolute; right: 20rpx; top:40rpx; width: 140rpx; z-index: 10; }
.stampGroup .stampWater{ display: block; width: 120rpx; transform:rotate(16deg); position: absolute; left: 0; bottom: 0;}
.stampGroup .stampImg{ display: block; width: 100rpx; margin: 0 auto 26rpx; border: 0;}
.stampGroup .time{ position: absolute; top:38rpx; left: 0; padding-left: 10rpx; width: 100%; text-align: center; color: #66523d; font-size: 20rpx; font-weight: bold; line-height: 30rpx; height: 30rpx; overflow: hidden;}

/* 选中 */
.iconCheckBtn{ border-radius: 50%; text-align: center; line-height: 40rpx; background: #0099e5; width: 40rpx; height: 40rpx; position: absolute; right: 0; top:0; overflow: hidden; opacity:0; transition: all .2s ease-in-out;}
.iconCheckBtn.on{ opacity: .95; transition: all .2s ease-in-out;}
.iconCheckBtn .iconfont{ color: #fff; font-size: 28rpx;}

/* textarea */
.textLabel{ padding: 20rpx 0 0; font-size: 28rpx; line-height: 42rpx; margin-bottom: 20rpx; position: relative;}
.textarea,.input{ width: 100%; font-size: 28rpx; line-height: 42rpx; color: #66523d;}
.textarea{ min-height: 420rpx; margin-bottom: 40rpx;}

/* otherInfoGrid */
.otherInfoGrid{ margin: 40rpx 0;}
.otherInfoGrid.mt30{ margin-top: 60rpx;}
.otherInfoGrid .title{ margin-bottom: 20rpx; font-size: 24rpx; color: #454545; line-height: 30rpx; height: 30rpx; overflow: hidden;}
.otherInfoGrid .title .span{ color: #999; margin-left: 10rpx;}

/* labelInfo */
.labelInfo{ padding-bottom: 20rpx;}
.labelInfo.textRight{ text-align: right;}
.labelInfo.author{ padding-bottom: 0; text-align: right; margin-bottom: 20rpx;}
.labelInfo .lineRadius{ width: 40rpx; height: 6rpx; border-radius: 4rpx; margin-bottom: 10rpx; background: #d9d2c8; overflow: hidden;} /* d9d2c8 */
.labelInfo .text{ font-size: 24rpx; color: #969695; line-height: 32rpx;}
.labelInfo .inputWrap{ padding: 10rpx 0;}
.labelInfo .inputWrap.bb0{ border-bottom: 0; padding: 0;}
.labelInfo .strong{ font-weight: bold; font-size: 28rpx; color: #66523d; margin: 0 10rpx;}
.labelInfo .tag{vertical-align:middle; position:relative; display:inline-flex; align-items:center; justify-content:center; line-height: 48rpx; font-size: 24rpx; color: #999; overflow: hidden;}
.labelInfo .tag .iconfont{ font-size: 24rpx; margin-right: 5rpx;}

/* footerBtn */
.footerBtn{ position: fixed; bottom:40rpx; left: 0; width: 100%; padding: 0 40rpx; z-index: 1024;}
.footerBtn .btn{ background-image:linear-gradient(45deg, #846e5d, #735f4f);
 color: #fff; width: 100%; border: 0; padding: 0 30rpx; text-align: center; border-radius: 40rpx; line-height: 80rpx; height: 80rpx; overflow: hidden; font-size: 32rpx;}
.footerBtn .btn.disabled{ opacity: .8;}

.footerBtn.rt{ left: auto; right: 40rpx; width: 240rpx; padding: 0; /*box-shadow: 0 2rpx 10rpx #d7c29f;*/}
.footerBtn .minBtn{ background: #fffdf7; border: 0; width: 100%; height: 72rpx; line-height: 72rpx; color: #66523d; text-align: center; font-size: 28rpx; border-radius: 40rpx; }

/* flagColorGrid */
.flagColorGroup{ white-space:nowrap; margin-bottom: 40rpx; height: 80rpx; overflow:hidden;}

/* flagGroup */
.currentFlag{ margin-bottom: 40rpx; height: 60rpx; padding-top: 5rpx; position: relative; padding-left:80rpx;}
.currentFlag .flagColor{ position: absolute; left: 0; top:0; font-size: 28rpx; width: 60rpx; height: 60rpx; line-height: 60rpx;}
.currentFlag .flagColor .iconfont{ font-size: 28rpx;}

/* tagInfo */
.tagInfo{ padding-bottom: 20rpx;}
.tagInfo.textRight{ text-align: right;}
.tagInfo.star{ padding-right: 60rpx; position: relative; min-height: 80rpx;}
.tagInfo.star .starBtn{ position: absolute; right: 0; top:0; width: 40rpx; height: 40rpx;}
.tagInfo.star .starBtn .iconfont{ font-size: 38rpx; color: #eee;}
.tagInfo.star .starBtn .iconfont.on{ color: #ffdb1e;}
.tagSpan{vertical-align:middle; position:relative; display:inline-flex; align-items:center; justify-content:center;
 padding: 0 20rpx; line-height: 48rpx; font-size: 24rpx; color: #999; background: #f1f1f1; border-radius: 24rpx; margin-right: 20rpx; overflow: hidden;}
.tagSpan .iconfont{ font-size: 24rpx; margin-right: 5rpx;}

/*
 * 绘制海报
*/
.canvasGrid{ position: fixed; left: -200%; z-index: -1; overflow:hidden;}
.share{ position: absolute; bottom: 100rpx; width: 70%; left: 15%; height: 100rpx; line-height: 100rpx;}
.preview { width: 100%; height: 100%; background: rgba(0,0,0,.9); position: fixed; left: 0; top:0; z-index: 1028; overflow: hidden;}
.preview .posterBox{ margin-top: 100rpx; }
.preview .imgBox{ display: block;  overflow: hidden; margin: 0 auto 40rpx; height: 520rpx;}
.preview .shareBtn{ width: 340rpx; height: 86rpx; margin: 0 auto; text-align: center; color: #fff; background: #71c3c8; border-radius: 44rpx; line-height: 86rpx; font-size: 30rpx; overflow: hidden; border: 0;}
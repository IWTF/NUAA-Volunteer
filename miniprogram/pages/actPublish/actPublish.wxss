/* miniprogram/pages/actPublish/actPublish.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #fff;
  font-size: 26rpx;
  color: #2c2c2c;
}

.container{
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #e9e9e9;
  padding: 20rpx 0;
  margin: 0 20rpx;
}

.name{
  margin: 0;
  flex: 4;
}

.form{
  color: #868686;
  text-align: right;
  flex: 8;
  font-size: 30rpx;
}

.tri{
  font-size: 0;
  line-height: 0;
  border-width: 9rpx;
  border-right-width: 0;
  border-style: dashed;
  border-left-style: solid;
  border-top-color: transparent;
  border-bottom-color: transparent;
  border-left-color: #b8b8b8;
  flex: 1;
  margin: 0 12rpx;
}

.kind{
  font-size: 30rpx;
  color: #868686;
}

.content{
  width: 100%;
  font-size: 30rpx;
  color: #868686;
  padding: 15rpx 30rpx;
  height: 200rpx;
}

/* 发布按钮 stype */
.btn_container{
  padding: 30rpx 0;
  border-top: 1rpx solid #e9e9e9;
  border-bottom: 1rpx solid #e9e9e9;
  margin-bottom: 30rpx;
}

.btn{
  border-radius: 50rpx;
  background-color: #1190fe;
  color: #fff;
  font-size: 33rpx;
  width: 400rpx;
  margin: auto;
}

/* 时间段 样式 */
.add {
  width: 40rpx;
  height: 40rpx;
  font-weight: bold;
  margin-right: 25rpx;
  padding: 5rpx;
  text-align: center;
  font-size: 36rpx;
  line-height: 40rpx;
  border-radius: 50%;
  color: #fff;
  background-color: #48aaff;
}

.timeDotCon {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10rpx 20rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  background-color: rgba(112, 150, 255, .2);
  box-shadow: 0 0 10rpx #ececec;
}

.timeDotCon .time {
  padding: 2rpx 15rpx;
  border-radius: 5rpx;
  background-color: rgba(255, 255, 255, .4);
}

.timeBar {
  position: fixed;
  bottom: -100%;
  left: 0;
  width: 100%;
  box-sizing: border-box;
  z-index: 3;
  color: #808080;
  background-color: #fff;
  padding: 30rpx 40rpx 60rpx;
  transition: all .3s ease-out;
}

.timeBarShow {
  bottom: 0;
}

.bg {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .3);
  transition: all .6s ease-out;
  opacity: 0;
  z-index: 1;
  
}
/* 伪禁止滑动事件 */
.noScroll {
  height: 100%;
  overflow: hidden;
}

.bgShow {
  opacity: 1;
}

.funcBar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 34rpx;
  margin-top: -6rpx;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #e2e2e2;
}

.timeBarTil {
  padding: 4rpx 0rpx;
  font-weight: bold;
  color: #329fff;
  margin-right: 30rpx;
}

.timeBarCon {
  width: 100vw;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  
}

.timeInput, .timeBarNum {
  border: #e6e6e6 solid 4rpx;
  padding: 6rpx 30rpx;
  border-radius: 10rpx;
}
/* miniprogram/pages/actPublish/actPublish.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #fff;
  font-size: 26rpx;
  color: #2c2c2c;
}

.container{
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #e9e9e9;
  padding: 20rpx 0;
  margin: 0 20rpx;
}

.name{
  margin: 0;
  flex: 4;
}

.form{
  color: #868686;
  text-align: right;
  flex: 8;
  font-size: 30rpx;
}

.tri{
  font-size: 0;
  line-height: 0;
  border-width: 9rpx;
  border-right-width: 0;
  border-style: dashed;
  border-left-style: solid;
  border-top-color: transparent;
  border-bottom-color: transparent;
  border-left-color: #b8b8b8;
  flex: 1;
  margin: 0 12rpx;
}

.content{
  width: 100%;
  font-size: 30rpx;
  color: #868686;
  padding: 15rpx 30rpx;
  height: 200rpx;
}

.hideClass {
  position: absolute;
  left: -999px;
}

/* 发布按钮 stype */
.btn_container{
  padding: 30rpx 0;
  border-top: 1rpx solid #e9e9e9;
  border-bottom: 1rpx solid #e9e9e9;
  margin-bottom: 30rpx;
}

.btn{
  border-radius: 50rpx;
  background-color: #1190fe;
  color: #fff;
  font-size: 33rpx;
  width: 400rpx;
  margin: auto;
}

.timeDotCon {
  border-bottom: 1rpx solid #e9e9e9;
  padding: 20rpx 0;
  margin: 0 20rpx;
}

.timeDotItem {
  margin: 10rpx 0;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  background-color: rgba(240, 240, 240, .5);
}

.selected {
  background-color: rgba(112, 150, 255, .2); 
  box-shadow: 0 0 10rpx #ececec;
}